// Remove CertificationCard and use image slides instead

function Certi() {
  // Prepare slides for Carousel (both mobile and desktop)
  // Use explicit array for correct image order and avoid duplicate keys
  const certImageNumbers = [4, 1, 2, 3, 4, 1]; // 4 at start, 1 at end for infinite effect

  const imageSlides = certImageNumbers.map((i, idx) => ({
    src: `/Certi/${i}.png`,
    renderCard: () => (
      <div className="flex items-center justify-center w-full h-full">
        <img
          src={`/Certi/${i}.png`}
          alt={`Certification ${i}`}
          className="w-full h-full max-w-[550px] max-h-[320px] object-contain"
          draggable={false}
        />
      </div>
    ),
    key: `cert-${i}-${idx}` // unique key for each slide
  }));

  return (
    <div className="box-border py-12 w-full bg-white font-['Krona_One']">
      <div className="mb-12 text-5xl text-center text-black max-md:text-4xl max-sm:text-3xl">
        Certifications
      </div>

      {/* Desktop view - use Carousel */}
      <div className="hidden sm:flex w-full justify-center items-center">
        <div className="w-[80vw] max-w-full mx-auto">
          <Carousel slides={imageSlides} infinite />
        </div>
      </div>

      {/* Mobile view - use Carousel, only one card visible at a time */}
      <div className="sm:hidden w-full px-4">
        <div className="relative overflow-hidden w-full py-4 flex items-center justify-center">
          <div className="w-[90vw] max-w-[340px] mx-auto">
            <Carousel slides={imageSlides} infinite />
          </div>
        </div>
      </div>
    </div>
  );
}

export default Certi;
   